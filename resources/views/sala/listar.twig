{% extends 'templates/app.twig' %}

{% block content %}
<div class="ui two column centered grid">
    <div class="column">
        <table class="ui celled table">
            <thead>
                <tr>
                    <th width="1%">Id</th>
                    <th>Nome</th>
                    <th width="1%">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {% if salas %}
                    {% for sala in salas %}
                        <tr>
                            <td>{{ sala.id }}</td>
                            <td>{{ sala.descricao }}</td>
                            <td nowrap>
                                <a title="Editar" class="item" href="{{ path_for("salas.editar", { id : sala.id }) }}">
                                  <i class="edit icon"></i>
                                </a>
                                <a class="excluir" title="Excluir" class="item" href="{{ path_for("salas.remover", { id : sala.id }) }}">
                                  <i class="delete icon"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3">Nenhuma sala cadastrada.</td>
                    </tr>
                {% endif %}
            <tfoot>
                <tr>
                    <th colspan="3">
                        <a class="ui button" href="{{ path_for("salas.nova") }}">Cadastrar Nova Sala</a>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<script type="text/javascript">

    jQuery(".excluir").click(function() {
        if (!confirm("Confirmar exclus√£o da sala?")) {
            return false;
        }
    })
</script>
{% endblock %}
