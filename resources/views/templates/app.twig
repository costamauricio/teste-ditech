<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Agenda</title>
        <link rel="stylesheet" href="{{ base_url() }}/css/semantic.min.css">
        <script type="text/javascript" src="{{ base_url() }}/js/jquery.min.js"></script>
        <script type="text/javascript" src="{{ base_url() }}/js/semantic.min.js"></script>
        <link rel="stylesheet" href="{{ base_url() }}/css/app.css">
        <script type="text/javascript" src="{{ base_url() }}/js/app.js"></script>
    </head>
    <body>
        <div class="ui fixed inverted menu">
            <div class="ui fluid container">
                <div class="header item">
                    Teste Ditech
                </div>
                {% if auth.check %}
                    <a class="item" href="{{ path_for("index") }}">
                      <i class="calendar icon"></i> Agenda
                    </a>
                    <a class="item" href="{{ path_for("salas.listar") }}">
                      <i class="list icon"></i> Salas
                    </a>
                    <div class="right menu">
                        <div class="ui simple dropdown item">
                            {{ auth.usuario.nome }}
                            <i class="dropdown icon"></i>
                            <div class="menu">
                                <a id="delete-user" class="item" href="{{ path_for("usuarios.remover", { id : auth.usuario.id }) }}">
                                    <i class="delete icon"></i> Excluir Conta
                                </a>
                            </div>
                        </div>
                        <a class="item" href="{{ path_for("auth.signout") }}">Sair</a>
                    </div>
                {% else %}
                    <div class="right menu">
                        <a class="item" href="{{ path_for("auth.signin") }}">Login</a>
                        <a class="item" href="{{ path_for("auth.signup") }}">Novo Usu√°rio</a>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="ui main fluid container">
            {% include 'templates/flash.twig' %}
            {% block content %}{% endblock %}
        </div>
    </body>
</html>
